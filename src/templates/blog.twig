{% extends "templates/layouts/standard.twig" %}
{% block main %}

  {% block blogPosts %}

    {% if posts %}

      <ul>

        {% for post in posts %}
          {% include "templates/partials/blog-item.twig" %}
        {% endfor %}

      </ul>

    {% else %}

      {{ lang('No results found') }}

    {% endif %}

  {% endblock blogPosts %}

{% endblock main %}
