<!doctype html>

<html {{ function('language_attributes') }}>

  {% block head %}

    <head>

      {% if customTitle %}
        <title>{{ customTitle ~ ' - ' ~ site.name }}</title>
      {% else %}
        <title>{{ wp_title ? wp_title ~ ' - ' ~ site.name : site.name }}</title>
      {% endif %}

      <meta name="viewport" content="width=device-width, initial-scale=1.0">

      <link rel="stylesheet" href="{{ site.theme.link }}/main.css" media="screen">

      {{ function('wp_head') }}

    </head>

  {% endblock head %}

  {% block body %}

    <body class="{{ body_class }}">

      {% block main %}
      {% endblock main %}

      <script src="{{ site.theme.link }}/main.js"></script>

      {% if site_public == true %}

        <script>
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
          ga('create', '', 'auto');
          ga('send', 'pageview');
        </script>

      {% else %}

        <script type='text/javascript' id="__bs_script__">
          document.write("<script async src='http://HOST:3000/browser-sync/browser-sync-client.2.11.1.js'><\/script>".replace("HOST", location.hostname));
        </script>

      {% endif %}

      {{ function('wp_footer') }}

    </body>

  {% endblock body %}

</html>
